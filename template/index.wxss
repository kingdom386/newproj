.icon {
  width: 50rpx;
  height: 50rpx;
}

.tabBar {
  width: 100%;
  position: fixed;
  bottom: 0;
  padding: 10rpx;
  background: #f7f7fa;
  font-size: 24rpx;
  color: #8a8a8a;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #aaa;
  z-index: 9999;
  background: #fff;
}

.tabBar-item {
  float: left;
  width: 25%;
  text-align: center;
  overflow: hidden;
}

/*当前字体颜色*/

.tabBartext {
  color: #cc935c;
}

.navigator-hover {
  background-color: rgba(0, 0, 0, 0);
}

.nav_txt{
  font-size: 26rpx;
  line-height: 30rpx;
}
