/* pages/search/index.wxss */
@import '../../lib/icon.wxss';

page {
  background: #f1f1f1;
}

.search_box {
  padding: 0 20rpx;
}

.section {
  padding: 10rpx 20rpx;
  position: fixed;
  width: 100%;
  height: 80rpx;
  left: 50%;
  top: 0;
  transform: translate3d(-50%, 0, 0);
  background: #fff;
  overflow: hidden
}

.search_icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  font-size: 38rpx;
  color: #909399;
  transform: translate3d(0, -50%, 0);
}

.search_input {
  padding-left: 60rpx;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 50rpx;
  border: 1px solid #dcdfe6;
  border-radius: 10rpx;
}

.list_box {
  padding: 100rpx 0 50rpx;
  height: atuo;
}

.list_item {
  padding: 20rpx 0;
  display: flex;
  height: 160rpx;
  flex-direction: row;
  align-content: center;
  justify-content: flex-start;
  background: #fff;
}

.list_left {
  flex-basis: 28%;
  margin: 0 auto;
  text-align: center;
}

.list_right {
  flex-basis: 72%;
  padding-right: 10rpx;
}

.list_tile {
  font-size: 30rpx;
  line-height: 40rpx;
  color: #303133;
}

.list_img {
  margin: 0 auto;
  display: blcok;
  width: 120rpx;
  height: 120rpx;
  background: #dcdfe6;
}

.color_blue {
  color: #409eff;
}

.color_purple{
  color: #F56C6C;
}

.list_info {
  overflow: hidden;
  display: -webkit-box;
  font-size: 24rpx;
  line-height: 40rpx;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  color: #606266;
}
.margin-btm20{
  margin-bottom: 20rpx;
}
input:-moz-placeholder {
  font-size: 24rpx;
}

input::-moz-placeholder {
  font-size: 24rpx;
}

input:-ms-input-placeholder {
  font-size: 24rpx;
}
