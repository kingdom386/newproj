.disnone {
  display: none;
}

.margin10 {
  margin: 8px 0;
}

.weui-label {
  font-size: 24rpx;
}

.weui-cell__bd {
  padding: 10rpx 0;
}

.weui-input, .weui-vcode-btn {
  font-size: 24rpx;
}

.weui-uploader__input-box {
  margin: 0 8px 0 0;
  height: 80rpx;
  width: 80rpx;
}

.weui-uploader__file, .weui-uploader__img {
  margin: 0;
  width: 80rpx;
  height: 80rpx;
}

.weui-uploader__file {
  margin-right: 10rpx;
  background: #fff;
}

.weui-uploader__input-box:before {
  width: 2px;
  height: 35rpx;
}

.weui-uploader__input-box:after {
  width: 35rpx;
  height: 2px;
}

.button-sp-area {
  text-align: center;
}

.button-sp-area button {
  margin-right: 8px;
}

.button-sp-area button:last-child {
  margin-right: 0;
}

.picker {
  font-size: 22rpx;
  line-height: 45rpx;
  height: 45rpx;
}

.form_check {
  padding-left: 20rpx;
  position: relative;
  width: 100%;
}

checkbox .wx-checkbox-input {
  /* position: absolute;
  top: -5px;
  z-index: 10; */
  width: 30rpx;
  height: 30rpx;
  /* border: 1px solid #f00; */
}

/*checkbox选中后样式  */

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #e6a23c;
}

/*checkbox选中后图标样式  */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.agree {
  font-size: 26rpx;
  line-height: 30rpx;
  color: #2095f2;
}

.btn_pane {
  margin-top: 20rpx;
  text-align: center;
}

.btns {
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  background: #e6a23c;
  color: #fff;
}

.active_btn {
  opacity: 0.8;
}
