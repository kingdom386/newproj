/* pages/register/index.wxss */
@import '../../lib/icon.wxss';

page {
  width: 100%;
  min-height: 100%;
  background: #53d6c7;
}

.register_box {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.info_box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.user_avatar {
  display: block;
  position: absolute;
  z-index: 10;
  top: 12%;
  height: 180rpx;
  width: 180rpx;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
  background: #909399;
  border-radius: 180rpx;
  overflow: hidden;
}

.form_box {
  position: absolute;
  left: 50%;
  top: 34%;
  width: 80%;
  height: auto;
  transform: translate3d(-50%, 0, 0);
}

.form_item {
  margin-bottom: 30rpx;
  position: relative;
  padding: 15rpx 0 15rpx 60rpx;
  display: flex;
  height: 80rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  flex-wrap: nowrap;
  border-bottom: 1px solid #dcdfe6;
}

.my_icon {
  position: absolute;
  left: 0;
  top: 15rpx;
  width: 50rpx;
  height: 50rpx;
  font-size: 50rpx;
  line-height: 50rpx;
  color: #fff;
}

.send_btn {
  position: absolute;
  right: 0;
  top: 15rpx;
  width: 180rpx;
  height: 50rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  color: #fff;
  background: #e6a23c;
}

.active_btn {
  opacity: 0.8;
}

.form_check {
  position: relative;
  width: 100%;
}

/*checkbox 选项框大小  */

checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
}

/*checkbox选中后样式  */

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #e6a23c;
}

/*checkbox选中后图标样式  */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.agree {
  font-size: 26rpx;
  line-height: 30rpx;
  color: #2095f2;
}

.btn_pane {
  margin-top: 20rpx;
  text-align: center;
}

.btns {
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  background: #e6a23c;
  color: #fff;
}


.btnss {
  margin-top: 30rpx;
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  background: transparent;
  color: #fff;
  border: 1px solid #fff;
}
.active_btn {
  opacity: 0.8;
}
