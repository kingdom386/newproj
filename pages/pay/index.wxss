/* pages/pay/index.wxss */

.pay_form {
  margin: 50rpx auto;
  width: 80%;
}

.margin_btm20 {
  margin-bottom: 20rpx;
}

.padding15 {
  padding: 15rpx 0;
}

.button-sp-area {
  margin-top: 50rpx;
  text-align: center;
}

.button-sp-area button {
  margin-right: 8px;
}

.button-sp-area button:last-child {
  margin-right: 0;
}

.weui_price_box {
  padding: 20rpx;
  height: auto;
}

.weui_txt {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  line-height: 30rpx;
}

.weui_price {
  text-align: center;
  font-size: 26rpx;
  line-height: 60rpx;
  color: #333;
}

.weui_price strong {
  margin: 0 10rpx;
  font-size: 40rpx;
  line-height: 60rpx;
  font-weight: bold;
}

.weui_pay_method{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
}

.weui_left{
  position: relative;
  padding-left: 70rpx;
  flex-basis: 40%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #333;
}

.weui_right{
  flex-basis: 60%;
  height: 80rpx;
  text-align: right;
}

.weui-btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.info_txt{
  margin-bottom: 10rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  color: #333;
}

.info_txt em {
  color: #666;
}

.upload_txt {
  position: relative;
  margin-bottom: 10rpx;
  height:  100rpx;
  font-size: 26rpx;
  line-height: 100rpx;
  color: #333;
}

.upload {
  display: inline;
  padding: 10rpx 20rpx;
  border: 1px solid #E4E7ED;
  border-radius: 5rpx;
}

.preview_img {
  position: absolute;
  top: 0;
  left: 150rpx;
  display: block;
  padding: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #EBEEF5;
}

.offline{
  border: 1px solid #cc935c;
  background: #fff;
  color: #cc935c;
}

.color_red {
  color: #F56C6C;
}
