/* pages/mine/index.wxss */
.my_info_panee{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  width: auto;
  height: 180rpx;
  background: #409EFF;
}
.my_img_left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-basis: 30%;
}
.my_img_right{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  flex-basis: 70%;
}
.my_img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  background: #b4b2b2;
  overflow: hidden;
}
.my_img image {
  width: 150rpx;
  height: 150rpx;
}

.my_jr_title{
  margin-top: 40rpx;
  font-size: 26rpx;
  line-height: 2;
  color: #fff;
}
.my_jr_sub{
  font-size: 20rpx;
  color: #fff;
  line-height: 30rpx;
}
.wx_cell{
  padding: 0 20rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
}
.wx_item{
  display: block;
  position: relative;
  flex-basis: 100%;
  padding-left: 60rpx;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #C0C4CC;
}
.wx_item image{
  position: absolute;
  left: 0;
  top: 50%;
  width: 45rpx;
  height: 45rpx;
  transform: translate3d(0, -50%, 0);
}

.wx_item text{
  font-size: 30rpx;
  line-height: 100rpx;
}
