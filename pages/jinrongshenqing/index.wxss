/* pages/apply/index.wxss */
.disnone{
  display: none;
}
.margin10 {
  margin: 8px 0;
}
.weui-label{
  font-size: 24rpx;
}
.weui-cell__bd{
  padding: 10rpx 0;
}
.weui-input, .weui-vcode-btn{
  font-size: 24rpx;
}
.weui-uploader__input-box {
  margin: 0 8px 0 0;
  height: 80rpx;
  width: 80rpx;
}
.weui-uploader__file, .weui-uploader__img{
  margin: 0;
  width: 80rpx;
  height: 80rpx;
}
.weui-uploader__file {
  margin-right: 10rpx;
  background: #fff;
}
.weui-uploader__input-box:before {
  width: 2px;
  height: 35rpx;
}

.weui-uploader__input-box:after {
  width: 35rpx;
  height: 2px;
}
.button-sp-area {
  text-align: center;
}

.button-sp-area button{
  margin-right: 8px;
}

.button-sp-area button:last-child{
  margin-right: 0;
}

.picker{
  font-size: 22rpx;
  line-height: 45rpx;
  height: 45rpx;
}