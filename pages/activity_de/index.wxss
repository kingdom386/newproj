/* pages/activity_de/index.wxss */
@import "../../lib/icon.wxss";

page {
  background: #f1f1f1;
}

.activity_de {
  padding: 10rpx 0 100rpx;
}

.activity_img {
  position: relative;
  margin-bottom: 90rpx;
}

.banner_img {
  width: 750rpx;
  height: 460rpx;
}

.banner_logo {
  width: 150rpx;
  height: 150rpx;
  border: 10rpx solid #fff;
}

